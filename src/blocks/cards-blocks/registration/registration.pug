            type: "single-date-picker", headText: "дата рождения",
            value: "ДД.ММ.ГГГГ"
        })(style="margin-bottom: 20px;")
        +b-h3("данные для входа в сервис")
        +b-input-field({
            type: "email", headText: "",
            secondHeadText: "",
            placeholder: "Email"
        })(style="margin-bottom: 10px;")
        +b-input-field({
            type: "password", headText: "",
            secondHeadText: "",
            placeholder: "Пароль"
        })(style="margin-bottom: 10px;")
        +b-toggle({
            id: "specialOffers",
            text: "Получать спецпредложения",
            active: "false"
        })(style="margin-bottom: 20px")
        +b-button({
            type: "wide", text: "перейти к оплате",
            disabled: "false", icon: "arrow-forward"
        })(type="submit" style="margin-bottom: 30px")
        +e.e-row(style="justify-content: space-between;")
