mixin b-registration()
    +b.FORM.b-registration&attributes(attributes)
        +b-h1("Регистрация аккаунта")(style="margin-bottom: 20px")
        +b-input-field({
            type: "text", headText: "",
            secondHeadText: "",
            placeholder: "Имя"
        })(style="margin-bottom: 10px;")
        +b-input-field({
            type: "text", headText: "",
            secondHeadText: "",
            placeholder: "Фамилия"
        })(style="margin-bottom: 10px;")
        +e.e-row(style="margin-bottom: 20px;")
            +b-radio-button({
                id: "rb1", name: "gender",
                text: "Мужчина", active: ""
            })(style="margin-right: 20px")
            +b-radio-button({
                id: "rb2", name: "gender",
                text: "Женщина"
            })
