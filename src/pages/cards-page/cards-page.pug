extends ../../template.pug

include ../../blocks/logo/logo
include ../../blocks/spacer/spacer
include ../../blocks/cards-blocks/find-room/find-room
include ../../blocks/cards-blocks/registration/registration
include ../../blocks/cards-blocks/booking-checkout/booking-checkout
include ../../blocks/cards-blocks/login/login
include ../../blocks/cards-blocks/room/room

block head
    title Cards
    meta(name="keywords" content="Cards, Forms")
    meta(name="description" content="Cards")
block content
    +b.b-cards-page
        +e.DIV.e-header
            +b-logo("watermark")
        +e.e-column
            +b-find-room()
            +b-registration()
        +e.e-column
            +b-booking-checkout({
                roomNumber: 888,
                isLux: true,
                price: 9990,
                arrival: "19.08.2019",
                departure: "23.08.2019",
                guestsNumber: 3
            })
            +b-login()
        +e.e-column
            +b-input-field({
                type: "range-date-picker", headText: "filter date dropdown",
                value: "19.08.2024 - 23.08.2024"
            })(style="width: 266px;" data-add-buttons data-input-hidden)
            +b-room({
                roomNumber: 888, isLux: true, price: 9990, rating: 5, feedBackCount: 145,
                imagesUrlArray: ["https://i.imgur.com/gElNyZU.png", "https://i.imgur.com/kEP3VhP.png", "https://i.imgur.com/pDqwJLr.jpeg"]
            })
            +b-room({
                roomNumber: 840,
                isLux: false,
                price: 9900,
                rating: 4,
                feedBackCount: 65,
                imagesUrlArray: ["https://i.imgur.com/kEP3VhP.png", "https://i.imgur.com/gElNyZU.png", "https://i.imgur.com/pDqwJLr.jpeg"]
            })
            
